FROM golang:1.25-alpine

WORKDIR /app

# Copy go.mod and go.sum first for dependency caching
COPY go.mod go.sum ./
RUN go mod download

# Copy the source code
COPY . .

# Build the API binary
RUN go build -o main ./api/main.go
RUN chmod +x ./main

# Expose port 8080
EXPOSE 8080

# Run the API
CMD ["./main"]
